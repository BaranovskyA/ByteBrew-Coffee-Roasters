@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Логин</title>
    <link rel="stylesheet" href="~/css/registerAndLogin.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">
</head>
<body>
<div class="row">
    <div class="col-md-4">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title" style="font-family:'JetBrains Mono'">Вход</h2>
                    <form method="POST" class="register-form" id="register-form">
                        <div class="form-group">
                            <label asp-for="ViewModel.UserName"><i class="bi bi-person-fill"></i></label>
                            <input style="font-family:'JetBrains Mono'" type="text" asp-for="ViewModel.UserName" id="name" placeholder="Логин" />
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="ViewModel.Password"><i class="bi bi-lock-fill"></i></i></label>
                            <input style="font-family:'JetBrains Mono'" type="password" asp-for="ViewModel.Password" id="pass" placeholder="Пароль" />
                        </div>
                        <span class="text-danger mt-3">@Model.Error</span>
                        <div class="form-group form-button">
                            <input style="font-family:'JetBrains Mono'; font-size: 15px" type="submit" name="signup" id="signup" class="form-submit" value="Войти" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="~/images/signup-image.png" alt="sing up image"></figure>
                    <a style="font-family:'JetBrains Mono'" href="~/Account/Register" class="signup-image-link">У меня нет аккаунта</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
