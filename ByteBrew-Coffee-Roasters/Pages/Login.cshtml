@page
@model ByteBrew_Coffee_Roasters.Pages.LoginModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Логин</title>
</head>
<body>

<h4>Логин</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <span class="text-danger">@Model.Error</span>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ViewModel.UserName" class="control-label">Имя пользователя</label>
                <input asp-for="ViewModel.UserName" class="form-control" required minlength="4" maxlength="32"/>
                <span asp-validation-for="ViewModel.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewModel.Password" class="control-label">Пароль</label>
                <input asp-for="ViewModel.Password" class="form-control" type="password" required minlength="4" maxlength="32" />
                <span asp-validation-for="ViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div class="mt-5">
    <a asp-page="Index">На главную</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
